<div class="header-title">
<%= link_to 'B-blog', root_path, class:"form-header-text" %>
</div>

<div class="article-show">
  <div class="article-box">
    <h2 class="article-name">
      <%= @article.title %>
    </h2>
    <div class="article-img-content">
      <%= image_tag @article.image, class:"article-box-img" %>
    </div>

    <div class="article-box-explain">
      <span class="article-box-category">
        <%= @article.category.name %>
      </span>
    </div>

    <div class="article-box-explain">
      <span class="article-box-text">
        <%= @article.text %>
      </span>
    </div>
  </div>
</div>